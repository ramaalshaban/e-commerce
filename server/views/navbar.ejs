<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      li,
      input {
        font-size: 1.5rem;
      }
      .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(113, 0, 0, 0.255);
      }
    </style>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg fixed-top navbar-dark"
      style="background-color: #000"
    >
      <a class="navbar-brand" href="/">Home</a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if(typeof admin !== "undefined") { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/customers">Customers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/new-admin">New-admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/signout">Logout</a>
          </li>
          <% } else if(typeof user !== "undefined") { %>
          <li class="nav-item">
            <a class="nav-link" href="/customer/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer/checkout">Checkout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer/signout">Logout</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/customer/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signin">Login</a>
          </li>
          <%} %>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/customer/shop-items">Shop items</a>
          </li>
        </ul>
        <% if(typeof admin !== "undefined") { %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/admin/add-item">add shop-item</a>
          </li>
        </ul>
        <% } %>
        <form
          action="/customer/shop-items/search"
          method="post"
          class="form-inline my-2 my-lg-0"
        >
          <input
            name="search"
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-danger my-2 my-sm-0" type="submit">
            Search
          </button>
        </form>
      </div>
    </nav>
  </body>
</html>
